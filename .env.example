# Discord Bot Configuration
# Get your bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here

# Database Configuration
# SQLite (default): sqlite:///path/to/archive.db
# PostgreSQL: postgresql+asyncpg://user:pass@localhost/wumpus
DATABASE_URL=sqlite:///./wumpus_archive.db

# PostgreSQL (optional — enables dual-database mode with SQLite→PG transfer)
# POSTGRES_URL=postgresql+asyncpg://wumpus:wumpus@localhost:5432/wumpus

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_DEBUG=false

# API Authentication (optional — if unset, all requests are allowed)
# Set to a random string to protect state-modifying endpoints (POST/PUT)
# API_SECRET=your_random_secret_here

# Scraper Configuration
BATCH_SIZE=1000
RATE_LIMIT_DELAY=0.5
MAX_RETRIES=5
DOWNLOAD_ATTACHMENTS=true
ATTACHMENTS_PATH=./attachments

# Portal Configuration
PORTAL_TITLE=Wumpus Archiver
PORTAL_DESCRIPTION=Discord Server Archive
DEFAULT_PAGE_SIZE=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/wumpus.log
